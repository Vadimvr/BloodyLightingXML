<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="DarkBackground" Color="#212121" />
    <SolidColorBrush x:Key="DarkFont" Color="#DBDBDB" />
    <SolidColorBrush x:Key="DarkBorder" Color="#3A3B3A" />
    <SolidColorBrush x:Key="DarkDataGridHeader" Color="#545454" />
    <SolidColorBrush x:Key="DataGridSelectedCellBackground" Color="#545454" />
    <SolidColorBrush x:Key="DataGridSelectedCellFontColor" Color="Snow" />
    <SolidColorBrush x:Key="DataGridSelected_IsSelected" Color="Transparent" />
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="#290404" />
    <SolidColorBrush x:Key="WindowButtonBackgroundColor" Color="#1A0203" />
    <Style TargetType="{x:Type Control}" x:Key="baseStyle">
        <Setter Property="FontSize" Value="16" />
    </Style>
</ResourceDictionary>